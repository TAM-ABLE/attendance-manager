{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@attendance-manager/shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*.ts", "lib/**/*.ts", "scripts/**/*.ts"]
}
